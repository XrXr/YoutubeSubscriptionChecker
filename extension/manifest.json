{
  "manifest_version": 2,
  "name": "Youtube Subscription Checker",
  "description": "Get notifications about new uploads from your favorite YouTube channels.",
  "icons": {
    "64": "icons/active64.png"
  },
  "author": "XrXr",
  "version": "2.4.0",
  "background": {
    "scripts": ["main.bundle.js"]
  },
  "web_accessible_resources": [
    "hub/home.html"
  ],
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "https://www.googleapis.com/*",
    "<all_urls>",
    "notifications"
  ],
  "applications": {
    "gecko": {
      "id": "youtube-subscription-checker@xrxr"
    }
  }
}
